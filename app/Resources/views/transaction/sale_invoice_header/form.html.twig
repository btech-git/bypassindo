{% extends 'transaction/layout.html.twig' %}

{% block actions %}
    {{ include('transaction/actions.html.twig') }}
{% endblock %}

{% import _self as self %}

{% macro details_row(object) %}
    <tr data-index="{{ object.vars.name }}">
        <td class="hide">
            {{ form_row(object.receiveOrder, {'label': false}) }}
        </td>
        <td>
            <span data-name="vehicle-chassis-number-{{ object.vars.name }}">{{ object.vars.value.vehicleChassisNumber|default }}</span>
        </td>
        <td>
            <span data-name="vehicle-machine-number-{{ object.vars.name }}">{{ object.vars.value.vehicleMachineNumber|default }}</span>
        </td>
        <td class="text-center">
            <span data-name="quantity-{{ object.vars.name }}">{{ object.vars.value.quantity|default|number_format(0) }}</span>
        </td>
        <td class="text-right">
            <span data-name="unit-price-{{ object.vars.name }}">{{ object.vars.value.unitPrice|default|number_format(2) }}</span>
        </td>
        <td class="text-right">
            <span data-name="total-{{ object.vars.name }}">{{ object.vars.value.total|default|number_format(2) }}</span>
        </td>
        <td>
            <button type="button" class="btn btn-info remove">Delete</button>
        </td>
    </tr>
{% endmacro %}

{% block content %}
    {{ form_start(form) }}
        <div>{{ form_errors(form) }}</div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Invoice #</label>
                    <div>{{ saleInvoiceHeader.codeNumber }}</div>
                </div>
                {{ form_row(form.transactionDate, {'label': 'Tanggal'}) }}
                {{ form_row(form.taxNumber, {'label': 'Faktur Pajak #'}) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.customer, {'attr': {'readonly': true, 'data-toggle': 'modal', 'data-target': '#customer-dialog'} }) }}
                <div class="form-group" id="customer-info">
                    <div>
                        <label>Customer:</label>
                        <span data-name="customer-name">{{ saleInvoiceHeader.customer.name|default }}</span>
                    </div>
                    <div>
                        <label>Contact Person:</label>
                        <span data-name="customer-contact-person">{{ saleInvoiceHeader.customer.contactPerson|default }}</span>
                    </div>
                    <div>
                        <label>Office Address:</label>
                        <span data-name="customer-office-address">{{ saleInvoiceHeader.customer.officeAddress|default }}</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div>{{ form_row(form.note) }}</div>
        
        <hr />
        
        <div>
            <button type="button" class="btn btn-default" id="add-sale-invoice-detai-prototype" data-toggle="modal" data-target="#receive-order-dialog">Add Detail</button>
        </div>
        
        <br />
        
        <table class="table table-bordered" id="sale-invoice-detail-list">
            <thead>
                <tr class="bg-info">
                    <th>Rangka #</th>
                    <th>Mesin #</th>
                    <th style="width: 10%">Quantity</th>
                    <th style="width: 15%">Price</th>
                    <th style="width: 15%">Total</th>
                    <th style="width: 0"></th>
                </tr>
            </thead>
            <tbody data-prototype="{{ self.details_row(form.saleInvoiceDetails.vars.prototype)|e }}">
                {% for saleInvoiceDetail in form.saleInvoiceDetails %}
                    {{ self.details_row(saleInvoiceDetail) }}
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td class="text-right" colspan="4">Grand Total</td>
                    <td class="text-right"><span data-name="grand-total">{{ saleInvoiceHeader.grandTotal|default|number_format(2) }}</span></td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        
        <input class="btn btn-primary navbar-inverse" type="submit" value="Save" data-confirm="Do you want to proceed?" />
    
        <div id="customer-dialog" class="modal fade" role="dialog">
            <div class="modal-dialog modal-lg" style="width: 90%">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Customer List</h4>
                    </div>
                    <div class="modal-body">
                        <div id="customer-grid" data-grid="{{ path('common_customer_grid', {'form': form.vars.id}) }}"></div>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
    
    <div id="receive-order-dialog" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg" style="width: 90%">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Receive Order List</h4>
                </div>
                <div class="modal-body">
                    <div id="receive-order-grid" data-grid="{{ path('common_receive_order_grid', {'form': form.vars.id}) }}"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        jQuery(function($) {
            function bind() {
                $.ajax({
                    method: "POST",
                    url: "{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_format': 'json'})) }}",
                    data: $("form").serialize(),
                    dataType: "JSON",
                    success: function(data) {
                        $("[data-name=grand-total]", "#sale-invoice-detail-list").text(data.grandTotal);
                    }
                });
            }
            
            var table = $("#sale-invoice-detail-list");
            var tableBody = $("tbody", table);
            
            tableBody.on("click", "button.remove", function() {
                $(this).closest("tr").remove();
                bind();
            });
            
            $("#customer-grid").on("click", "table[data-role=table] tbody tr", function() {
                $("#customer-dialog").modal("hide");
                $("#{{ form.customer.vars.id }}").val($(this).attr("data-field-id"));
                $("[data-name=customer-name]", "#customer-info").text($(this).attr("data-field-name"));
                $("[data-name=customer-contact-person]", "#customer-info").text($(this).attr("data-field-contact-person"));
                $("[data-name=customer-office-address]", "#customer-info").text($(this).attr("data-field-office-address"));
            });
            
            $("#receive-order-grid").on("click", "table[data-role=table] tbody tr", function() {
                $("#receive-order-dialog").modal("hide");
                var context = $(this);
                var name = "{{ form.saleInvoiceDetails.vars.prototype.vars.name }}";
                var rows = tableBody.children("tr");
                var index = Math.max({{ saleInvoiceDetailsCount }}, (rows.length > 0) ? parseInt(rows.last().attr("data-index")) + 1 : 0);
                tableBody.appendByPrototype(tableBody.attr("data-prototype"), name, index, function(prototype) {
                    var receiveOrderPrototype = prototype.find("#{{ form.saleInvoiceDetails.vars.prototype.receiveOrder.vars.id }}");
                    receiveOrderPrototype.val(context.attr("data-field-id"));
                    var vehicleChassisNumberPrototype = prototype.find("[data-name=vehicle-chassis-number-" + name + "]");
                    vehicleChassisNumberPrototype.text(context.attr("data-field-vehicle-chassis-number"));
                    var vehicleMachineNumberPrototype = prototype.find("[data-name=vehicle-machine-number-" + name + "]");
                    vehicleMachineNumberPrototype.text(context.attr("data-field-vehicle-machine-number"));
                    var quantityPrototype = prototype.find("[data-name=quantity-" + name + "]");
                    quantityPrototype.text(context.attr("data-field-sale-order-quantity"));
                    var unitPricePrototype = prototype.find("[data-name=unit-price-" + name + "]");
                    unitPricePrototype.attr("value", context.attr("data-field-sale-order-unit-price"));
                    var totalPrototype = prototype.find("[data-name=total-" + name + "]");
                    totalPrototype.attr("value", context.attr("data-field-sale-order-total"));
                });
                bind();
            });
        });
    </script>
{% endblock %}
