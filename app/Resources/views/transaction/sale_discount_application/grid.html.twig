{% set grid_layout = 'datagrid.html.twig' %}

{{ grid_top(grid) }}

<table data-role="table" class="table table-bordered table-striped table-condensed table-hover">
    <thead>
        <tr data-action="sort" class="alert alert-info">
            <th data-group="saleDiscountApplication" data-field="transactionDate">Transaction Date</th>
            <th data-group="saleDiscountApplication" data-field="dealStatus">Deal Status</th>
            <th data-group="saleDiscountApplication" data-field="dealDate">Deal Date</th>
            <th data-group="saleDiscountApplication" data-field="customerStatusType">Customer Status Type</th>
            <th data-group="saleDiscountApplication" data-field="customerStatusName">Customer Status Name</th>
            <th data-group="saleDiscountApplication" data-field="requestType">Request Type</th>
            <th data-group="saleDiscountApplication" data-field="requestQuantity">Request Quantity</th>
            <th data-group="saleDiscountApplication" data-field="requestUsageType">Request Usage Type</th>
            <th data-group="saleDiscountApplication" data-field="requestWorkshop">Request Workshop</th>
            <th data-group="saleDiscountApplication" data-field="competitorBrand">Competitor Brand</th>
            <th data-group="saleDiscountApplication" data-field="competitorType">Competitor Type</th>
            <th data-group="saleDiscountApplication" data-field="competitorDealer">Competitor Dealer</th>
            <th data-group="saleDiscountApplication" data-field="paymentMethodType">Payment Method Type</th>
            <th data-group="saleDiscountApplication" data-field="paymentMethodValue">Payment Method Value</th>
            <th data-group="saleDiscountApplication" data-field="customerPrice">Customer Price</th>
            <th data-group="saleDiscountApplication" data-field="salesmanPrice">Salesman Price</th>
            <th data-group="saleDiscountApplication" data-field="approvedPrice">Approved Price</th>
            <th data-group="saleDiscountApplication" data-field="competitorPrice">Competitor Price</th>
            <th data-group="saleDiscountApplication" data-field="offTheRoadPrice">Off The Road Price</th>
            <th data-group="saleDiscountApplication" data-field="registrationPrice">Registration Price</th>
            <th data-group="saleDiscountApplication" data-field="subTotalPrice">Sub Total Price</th>
            <th data-group="saleDiscountApplication" data-field="otherPrice">Other Price</th>
            <th data-group="saleDiscountApplication" data-field="grandTotalPrice">Grand Total Price</th>
            <th data-group="saleDiscountApplication" data-field="mediatorPrice">Mediator Price</th>
            <th data-group="saleDiscountApplication" data-field="note">Note</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for saleDiscountApplication in grid.data %}
            <tr data-field-id="{{ saleDiscountApplication.id }}">
                <td class="text-left">{{ saleDiscountApplication.transactionDate|default ? saleDiscountApplication.transactionDate|date('Y-m-d') }}</td>
                <td class="text-left">{{ saleDiscountApplication.dealStatus|default }}</td>
                <td class="text-left">{{ saleDiscountApplication.dealDate|default ? saleDiscountApplication.dealDate|date('Y-m-d') }}</td>
                <td class="text-left">{{ saleDiscountApplication.customerStatusType|default }}</td>
                <td class="text-left">{{ saleDiscountApplication.customerStatusName|default }}</td>
                <td class="text-left">{{ saleDiscountApplication.requestType|default }}</td>
                <td class="text-left">{{ saleDiscountApplication.requestQuantity|default }}</td>
                <td class="text-left">{{ saleDiscountApplication.requestUsageType|default }}</td>
                <td class="text-left">{{ saleDiscountApplication.requestWorkshop|default }}</td>
                <td class="text-left">{{ saleDiscountApplication.competitorBrand|default }}</td>
                <td class="text-left">{{ saleDiscountApplication.competitorType|default }}</td>
                <td class="text-left">{{ saleDiscountApplication.competitorDealer|default }}</td>
                <td class="text-left">{{ saleDiscountApplication.paymentMethodType|default }}</td>
                <td class="text-left">{{ saleDiscountApplication.paymentMethodValue|default }}</td>
                <td class="text-right">{{ saleDiscountApplication.customerPrice|default|number_format(2) }}</td>
                <td class="text-right">{{ saleDiscountApplication.salesmanPrice|default|number_format(2) }}</td>
                <td class="text-right">{{ saleDiscountApplication.approvedPrice|default|number_format(2) }}</td>
                <td class="text-right">{{ saleDiscountApplication.competitorPrice|default|number_format(2) }}</td>
                <td class="text-right">{{ saleDiscountApplication.offTheRoadPrice|default|number_format(2) }}</td>
                <td class="text-right">{{ saleDiscountApplication.registrationPrice|default|number_format(2) }}</td>
                <td class="text-right">{{ saleDiscountApplication.subTotalPrice|default|number_format(2) }}</td>
                <td class="text-right">{{ saleDiscountApplication.otherPrice|default|number_format(2) }}</td>
                <td class="text-right">{{ saleDiscountApplication.grandTotalPrice|default|number_format(2) }}</td>
                <td class="text-right">{{ saleDiscountApplication.mediatorPrice|default|number_format(2) }}</td>
                <td class="text-left">{{ saleDiscountApplication.note|default }}</td>
                <td class="text-left">
                    {{ include('transaction/actions.html.twig', {
                        'contents': {
                            '{index}': null,
                            '{new}': null,
                            '{show}': include('action.html.twig', {'url': path('transaction_sale_discount_application_show', {'id': saleDiscountApplication.id}), 'button': 'btn btn-info btn-sm', 'icon': 'glyphicon glyphicon-info-sign'}),
                            '{edit}': include('action.html.twig', {'url': path('transaction_sale_discount_application_edit', {'id': saleDiscountApplication.id}), 'button': 'btn btn-warning btn-sm', 'icon': 'glyphicon glyphicon-edit'}),
                            '{delete}': include('action.html.twig', {'url': path('transaction_sale_discount_application_delete', {'id': saleDiscountApplication.id}), 'button': 'btn btn-danger btn-sm', 'icon': 'glyphicon glyphicon-remove'}),
                        }
                    }) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="26" class="alert alert-warning">
                    <strong>There are no items to display.</strong>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{{ grid_bottom(grid) }}
