{% extends 'transaction/layout.html.twig' %}

{% block actions %}
    {{ include('transaction/actions.html.twig') }}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
        <div>{{ form_errors(form) }}</div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Pengajuan Discount #</label>
                    <div>{{ saleDiscountApplication.codeNumber }}</div>
                </div>
                {{ form_row(form.transactionDate, {'label' : 'Tanggal'}) }}
                {{ form_row(form.customer, {'attr': {'readonly': true, 'data-toggle': 'modal', 'data-target': '#customer-dialog'} }) }}
                <div class="form-group" id="customer-info">
                    <div>
                        <label>Customer:</label>
                        <span data-name="customer-name">{{ saleDiscountApplication.customer.name|default }}</span>
                    </div>
                    <div>
                        <label>Contact Person:</label>
                        <span data-name="customer-contact-person">{{ saleDiscountApplication.customer.contactPerson|default }}</span>
                    </div>
                    <div>
                        <label>Phone:</label>
                        <span data-name="customer-phone">{{ saleDiscountApplication.customer.phone|default }}</span>
                    </div>
                    <div>
                        <label>Business Field:</label>
                        <span data-name="customer-business-field">{{ saleDiscountApplication.customer.businessField|default }}</span>
                    </div>
                    <div>
                        <label>Cat 2:</label>
                    </div>
                    <div style="padding-left: 25px">
                        <div>
                            <label>Hino:</label>
                            <span data-name="customer-category-two-hino-population">{{ saleDiscountApplication.customer.categoryTwoHinoPopulation|default|number_format(0) }}</span> unit
                        </div>
                        <div>
                            <label>Mitsubishi:</label>
                            <span data-name="customer-category-two-mitsubishi-population">{{ saleDiscountApplication.customer.categoryTwoMitsubishiPopulation|default|number_format(0) }}</span> unit
                        </div>
                        <div>
                            <label>Toyota:</label>
                            <span data-name="customer-category-two-toyota-population">{{ saleDiscountApplication.customer.categoryTwoToyotaPopulation|default|number_format(0) }}</span> unit
