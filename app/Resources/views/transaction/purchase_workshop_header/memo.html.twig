{% extends 'base.html.twig' %}

{% block title 'Memo' %}

{% block body %}
    <div class="memo-content">
        <div class="rows-empty top">
            &nbsp;
        </div>
        <div class="rows-1 content-left">
            {{ purchaseWorkshopHeader.supplier.name|default }} <br /><br />
            {{ purchaseWorkshopHeader.supplier.officeAddress|default }}
        </div>
        <div class="rows-1 content-right">
            {{ purchaseWorkshopHeader.codeNumber|default }} <br /><br />
            {{ purchaseWorkshopHeader.transactionDate|default ? purchaseWorkshopHeader.transactionDate|date('j F Y') }}
        </div>
        <div class="rows-empty middle">
            &nbsp;
        </div>
        <div class="table-payment">
            {% set num = 1 %}
            {% for purchaseWorkshopDetail in purchaseWorkshopHeader.purchaseWorkshopDetails %}
                <table style="width: 100%">
                    <tr>
                        <td>{{ num }}</td>
                        <td>{{ purchaseWorkshopDetail.itemName|default }}</td>
                        <td style="width: 15%">{{ purchaseWorkshopDetail.purchaseWorkshopHeader.vehicleChassisNumber|default }}</td>
                        <td style="width: 15%">{{ purchaseWorkshopDetail.purchaseWorkshopHeader.vehicleMachineNumber|default }}</td>
                        <td style="width: 10%">{{ purchaseWorkshopDetail.quantity|default|number_format(0) }}</td>
                        <td style="width: 15%">{{ purchaseWorkshopDetail.unitPrice|default|number_format(0) }}</td>
                        <td style="width: 15%">{{ purchaseWorkshopDetail.total|default|number_format(0) }}</td>
                    </tr>
                </table>
                {% set num = num + 1 %}
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block stylesheets_include %}
    
{% endblock %}

{% block javascripts_include %}{% endblock %}

{% block stylesheets %}
    <style>
        div.memo-content {
            font-family: Arial;
            font-size: 4mm;
        }
        div.memo-content div {
            margin: 0;
            padding: 0;
            overflow: hidden;
        }
        div.memo-content > div {
            width: 20cm;
        }
        div.memo-content div.content-left, div.memo-content div.content-right {
            vertical-align: top;
            display: inline-block;
        }
        div.memo-content div.rows-1.header {
            height: 7mm;
            padding-left: 60mm;
        }
        div.memo-content div.rows-1.nominal {
            height: 11mm;
            padding-left: 40mm;
        }
        div.memo-content div.rows-1.price-info.content-left, div.memo-content div.rows-1.price-info.content-right {
            height: 7mm;
        }
        div.memo-content div.rows-1.content-left {
            width: 55mm;
            padding-left: 2mm;
            text-align: left;
        }
        div.memo-content div.rows-1.content-right {
            width: 125mm;
            padding-right: 5mm;
            text-align: right;
        }
        div.memo-content div.rows-1.total-price {
            height: 10mm;
            padding-left: 18mm;
        }
        div.memo-content div.rows-2.item-name {
            height: 8mm;
            padding-left: 35mm;
        }
        div.memo-content div.rows-2.vehicle {
            height: 8mm;
            padding-left: 55mm;
        }
        div.memo-content div.rows-2.quantity {
            height: 8mm;
            padding-left: 75mm;
        }
        div.memo-content div.rows-2.unit-price {
            height: 8mm;
            padding-left: 85mm;
        }
        div.memo-content div.rows-2.total-price {
            height: 8mm;
            padding-left: 100mm;
        }
        div.memo-content div.rows-empty.top {
            height: 60mm;
        }
        div.memo-content div.rows-empty.middle {
            height: 9mm;
        }
        div.memo-content div.rows-empty.bottom {
            height: 12mm;
        }
        div.table-payment {
            height: 38mm;
        }
    </style>
{% endblock %}