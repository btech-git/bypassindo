{% extends 'transaction/layout.html.twig' %}

{% block title 'Show Purchase Delivery Order' %}

{% block actions %}
    {{ include('transaction/actions.html.twig') }}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Transaction Date</th>
                <td>{{ purchaseDeliveryOrder.transactionDate|default ? purchaseDeliveryOrder.transactionDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ purchaseDeliveryOrder.reference|default }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ purchaseDeliveryOrder.note|default }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
