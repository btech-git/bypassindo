{% extends 'transaction/layout.html.twig' %}

{% block actions %}
    {{ include('transaction/actions.html.twig') }}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label>SJ Karoseri #</label>
                    <div>{{ deliveryWorkshop.codeNumber }}</div>
                </div>
                {{ form_row(form.transactionDate) }}
                {{ form_row(form.supplier, {'attr': {'readonly': true, 'data-toggle': 'modal', 'data-target': '#supplier-dialog'} }) }}
                <div>
                    <label>Supplier:</label>
                    <span id="supplier-name">{{ deliveryWorkshop.supplier.name|default }}</span>
                </div>
                <div>
                    <label>Contact Person:</label>
                    <span id="supplier-contact-person">{{ deliveryWorkshop.supplier.contactPerson|default }}</span>
                </div>
                <div>
                    <label>Phone:</label>
                    <span id="supplier-phone">{{ deliveryWorkshop.supplier.phone|default }}</span>
                </div>
                <div>
                    <label>Office Address:</label>
                    <span id="supplier-office-address">{{ deliveryWorkshop.supplier.officeAddress|default }}</span>
                </div>
            </div>
            <div class="col-sm-6">
                {{ form_row(form.receiveOrder, {'attr': {'readonly': true, 'data-toggle': 'modal', 'data-target': '#receive-order-dialog'} }) }}
                <div>
                    <label>Customer:</label>
                    <span id="customer-name">{{ deliveryWorkshop.receiveOrder.saleOrder.customer.name|default }}</span>
                </div>
                <div>
                    <label>Vehicle Brand:</label>
                    <span id="sale-order-vehicle-brand">{{ deliveryWorkshop.receiveOrder.saleOrder.vehicleBrand|default }}</span>
                </div>
                <div>
                    <label>Vehicle Serial Number:</label>
                    <span id="sale-order-vehicle-serial-number">{{ deliveryWorkshop.receiveOrder.saleOrder.vehicleSerialNumber|default }}</span>
                </div>
                <div>
                    <label>Vehicle Color:</label>
                    <span id="sale-order-vehicle-color">{{ deliveryWorkshop.receiveOrder.saleOrder.vehicleColor|default }}</span>
                </div>
                <div>
                    <label>Vehicle Production Year:</label>
                    <span id="receive-order-vehicle-production-year">{{ deliveryWorkshop.receiveOrder.vehicleProductionYear|default }}</span>
                </div>
                <div>
                    <label>Vehicle Chassis Number:</label>
                    <span id="receive-order-vehicle-chassis-number">{{ deliveryWorkshop.receiveOrder.vehicleChassisNumber|default }}</span>
                </div>
                <div>
                    <label>Vehicle Machine Number:</label>
                    <span id="receive-order-vehicle-machine-number">{{ deliveryWorkshop.receiveOrder.vehicleMachineNumber|default }}</span>
                </div>
                <div>
                    <label>Vehicle Description:</label>
                    <span id="receive-order-vehicle-description">{{ deliveryWorkshop.receiveOrder.vehicleDescription|default }}</span>
                </div>
                <div>
                    <label>Manufacture Code:</label>
                    <span id="vehicle-model-manufacture-code">{{ deliveryWorkshop.receiveOrder.saleOrder.vehicleModel.manufactureCode|default }}</span>
                </div>
                <br />
            </div>
        </div>
        
        <div>{{ form_row(form.note) }}</div>
        
        <input class="btn btn-primary navbar-inverse" type="submit" value="Save" data-confirm="Do you want to proceed?" />
    
        <div id="supplier-dialog" class="modal fade" role="dialog">
            <div class="modal-dialog modal-lg" style="width: 90%">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Supplier List</h4>
                    </div>
                    <div class="modal-body">
                        <div id="supplier-grid" data-grid="{{ path('common_supplier_grid') }}"></div>
                    </div>
                </div>
            </div>
        </div>
                    
        <div id="receive-order-dialog" class="modal fade" role="dialog">
            <div class="modal-dialog modal-lg" style="width: 90%">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Receive Order List</h4>
                    </div>
                    <div class="modal-body">
                        <div id="receive-order-grid" data-grid="{{ path('common_receive_order_grid') }}"></div>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        jQuery(function($) {
            $("#supplier-grid").on("click", "table[data-role=table] tbody tr", function() {
                $("#supplier-dialog").modal("hide");
                $("#{{ form.supplier.vars.id }}").val($(this).attr("data-field-id"));
                $("#supplier-name").text($(this).attr("data-field-name"));
                $("#supplier-contact-person").text($(this).attr("data-field-contact-person"));
                $("#supplier-phone").text($(this).attr("data-field-phone"));
                $("#supplier-office-address").text($(this).attr("data-field-office-address"));
            });
            $("#receive-order-grid").on("click", "table[data-role=table] tbody tr", function() {
                $("#receive-order-dialog").modal("hide");
                $("#{{ form.receiveOrder.vars.id }}").val($(this).attr("data-field-id"));
                $("#customer-name").text($(this).attr("data-field-customer-name"));
                $("#sale-order-vehicle-brand").text($(this).attr("data-field-sale-order-vehicle-brand"));
                $("#sale-order-vehicle-serial-number").text($(this).attr("data-field-sale-order-vehicle-serial-number"));
                $("#sale-order-vehicle-color").text($(this).attr("data-field-sale-order-vehicle-color"));
                $("#receive-order-vehicle-production-year").text($(this).attr("data-field-vehicle-production-year"));
                $("#receive-order-vehicle-chassis-number").text($(this).attr("data-field-vehicle-chassis-number"));
                $("#receive-order-vehicle-machine-number").text($(this).attr("data-field-vehicle-machine-number"));
                $("#receive-order-vehicle-description").text($(this).attr("data-field-vehicle-description"));
                $("#vehicle-model-manufacture-code").text($(this).attr("data-field-vehicle-model-manufacture-code"));
            });
        });
    </script>
{% endblock %}
