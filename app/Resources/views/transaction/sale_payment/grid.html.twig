{% set grid_layout = 'datagrid.html.twig' %}

{{ grid_top(grid) }}

<table data-role="table" class="table table-bordered table-striped table-condensed table-hover">
    <thead>
        <tr data-action="sort" class="alert alert-info">
            <th data-group="salePayment" data-field="transactionDate">Transaction Date</th>
            <th data-group="salePayment" data-field="amount">Amount</th>
            <th data-group="salePayment" data-field="note">Note</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for salePayment in grid.data %}
            <tr data-field-id="{{ salePayment.id }}">
                <td class="text-left">{{ salePayment.transactionDate|default ? salePayment.transactionDate|date('Y-m-d') }}</td>
                <td class="text-right">{{ salePayment.amount|default|number_format(2) }}</td>
                <td class="text-left">{{ salePayment.note|default }}</td>
                <td class="text-left">
                    {{ include('transaction/actions.html.twig', {
                        'contents': {
                            '{index}': null,
                            '{new}': null,
                            '{show}': include('action.html.twig', {'url': path('transaction_sale_payment_show', {'id': salePayment.id}), 'button': 'btn btn-info btn-sm', 'icon': 'glyphicon glyphicon-info-sign'}),
                            '{edit}': include('action.html.twig', {'url': path('transaction_sale_payment_edit', {'id': salePayment.id}), 'button': 'btn btn-warning btn-sm', 'icon': 'glyphicon glyphicon-edit'}),
                            '{delete}': include('action.html.twig', {'url': path('transaction_sale_payment_delete', {'id': salePayment.id}), 'button': 'btn btn-danger btn-sm', 'icon': 'glyphicon glyphicon-remove'}),
                        }
                    }) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="alert alert-warning">
                    <strong>There are no items to display.</strong>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{{ grid_bottom(grid) }}
