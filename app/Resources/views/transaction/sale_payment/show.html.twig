{% extends 'transaction/layout.html.twig' %}

{% block title 'Show Sale Payment' %}

{% block actions %}
    {{ include('transaction/actions.html.twig') }}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Transaction Date</th>
                <td>{{ salePayment.transactionDate|default ? salePayment.transactionDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ salePayment.amount|default|number_format(2) }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ salePayment.note|default }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
