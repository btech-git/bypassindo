{% set grid_layout = 'datagrid.html.twig' %}

{{ grid_top(grid) }}

<table data-role="table" class="table table-bordered table-striped table-condensed table-hover">
    <thead>
        <tr data-action="sort" class="alert alert-info">
            <th data-group="deliveryInspectionHeader" data-field="transactionDate">Transaction Date</th>
            <th data-group="deliveryInspectionHeader" data-field="isVehicleComplete">Is Vehicle Complete</th>
            <th data-group="deliveryInspectionHeader" data-field="isBodyBuilderExecuted">Is Body Builder Executed</th>
            <th data-group="deliveryInspectionHeader" data-field="note">Note</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for deliveryInspectionHeader in grid.data %}
            <tr data-field-id="{{ deliveryInspectionHeader.id }}">
                <td class="text-left">{{ deliveryInspectionHeader.transactionDate|default ? deliveryInspectionHeader.transactionDate|date('Y-m-d') }}</td>
                <td class="text-left">{{ deliveryInspectionHeader.isVehicleComplete|default ? 'Yes' : 'No' }}</td>
                <td class="text-left">{{ deliveryInspectionHeader.isBodyBuilderExecuted|default ? 'Yes' : 'No' }}</td>
                <td class="text-left">{{ deliveryInspectionHeader.note|default }}</td>
                <td class="text-left">
                    {{ include('transaction/actions.html.twig', {
                        'contents': {
                            '{index}': null,
                            '{new}': null,
                            '{show}': include('action.html.twig', {'url': path('transaction_delivery_inspection_header_show', {'id': deliveryInspectionHeader.id}), 'button': 'btn btn-info btn-sm', 'icon': 'glyphicon glyphicon-info-sign'}),
                            '{edit}': include('action.html.twig', {'url': path('transaction_delivery_inspection_header_edit', {'id': deliveryInspectionHeader.id}), 'button': 'btn btn-warning btn-sm', 'icon': 'glyphicon glyphicon-edit'}),
                            '{delete}': include('action.html.twig', {'url': path('transaction_delivery_inspection_header_delete', {'id': deliveryInspectionHeader.id}), 'button': 'btn btn-danger btn-sm', 'icon': 'glyphicon glyphicon-remove'}),
                        }
                    }) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="alert alert-warning">
                    <strong>There are no items to display.</strong>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{{ grid_bottom(grid) }}
