{% set grid_layout = 'datagrid.html.twig' %}

<div class="hidden-print">
    {{ grid_top(grid) }}
    {#<div class="text-center">
        <button type="button" class="btn btn-info btn-sm" id="export">Export</button>
    </div>#}
    <hr />
</div>

<div class="report">
    <div class="report-header">
        <div class="report-title">PT. Bypassindo Jaya Indah</div>
        <div class="report-title">Laporan Penjualan Unit Hino</div>
        <div>
            {% set startDate = grid.searchVals['saleInvoice']['transactionDate'][1]|default %}
            {% set endDate = grid.searchVals['saleInvoice']['transactionDate'][2]|default %}
            {{ startDate ? startDate|date('j F Y') }} &nbsp;&ndash;&nbsp; {{ endDate ? endDate|date('j F Y') }}
        </div>
    </div>

    <br />

    {% set totalSum = 0.00 %}
    <table class="report-data">
        <thead class="border-top-solid-bold border-bottom-solid-bold">
            <tr>
                <th class="text-center">Penjualan Unit #</th>
                <th class="text-center">Tanggal</th>
                <th class="text-center">Customer</th>
                <th class="text-center">Salesman</th>
                <th class="text-center">Tipe</th>
                <th class="text-center">Rangka</th>
                <th class="text-center">Mesin</th>
                <th class="text-center">Total</th>
                <th class="text-center">DPP</th>
                <th class="text-center">PPN</th>
            </tr>
        </thead>
        <tbody class="border-top-solid-bold border-bottom-solid-bold">
            {% for saleInvoice in grid.data %}
                {% set total = (saleInvoice.amount * 1.1) %}
                <tr data-field-id="{{ saleInvoice.id }}">
                    <td class="text-left">{{ saleInvoice.codeNumber|default }}</td>
                    <td class="text-left">{{ saleInvoice.transactionDate|default ? saleInvoice.transactionDate|date('j F Y') }}</td>
                    <td class="text-left">{{ saleInvoice.receiveOrder.purchaseDeliveryOrder.saleOrder.customer.name|default }}</td>
                    <td class="text-left">{{ saleInvoice.receiveOrder.purchaseDeliveryOrder.saleOrder.staffFirst.name|default }}</td>
                    <td class="text-left">{{ saleInvoice.receiveOrder.purchaseDeliveryOrder.vehicleModel.vosModelName|default }}</td>
                    <td class="text-left">{{ saleInvoice.receiveOrder.purchaseDeliveryOrder.vehicleChassisNumber|default }}</td>
                    <td class="text-left">{{ saleInvoice.receiveOrder.purchaseDeliveryOrder.vehicleMachineNumber|default }}</td>
                    <td class="text-right">{{ total|default|number_format(2) }}</td>
                    <td class="text-right">{{ saleInvoice.amount|default|number_format(2) }}</td>
                    <td class="text-right">{{ (saleInvoice.amount * 0.1)|default|number_format(2) }}</td>
                </tr>
                {% set totalSum = totalSum + total %}
            {% endfor %}
        </tbody>
        <tfoot class="border-top-solid-bold border-bottom-solid-bold">
            <tr>
                <td class="text-right" colspan="7"></td>
                <td class="text-right">{{ totalSum|default|number_format(2) }}</td>
                <td class="text-right" colspan="2"></td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="hidden-print">
    <br />
    {{ grid_bottom(grid) }}
</div>

