{% set grid_layout = 'datagrid.html.twig' %}

<div class="hidden-print">
    {{ grid_top(grid) }}
    {#<div class="text-center">
        <button type="button" class="btn btn-info btn-sm" id="export">Export</button>
    </div>#}
    <hr />
</div>

<div class="report">
    <div class="report-header">
        <div class="report-title">PT. Bypassindo Jaya Indah</div>
        <div class="report-title">Laporan Penjualan</div>
        <div>
            {% set startDate = grid.searchVals['saleInvoiceHeader']['transactionDate'][1]|default %}
            {% set endDate = grid.searchVals['saleInvoiceHeader']['transactionDate'][2]|default %}
            {{ startDate ? startDate|date('j F Y') }} &nbsp;&ndash;&nbsp; {{ endDate ? endDate|date('j F Y') }}
        </div>
    </div>

    <br />

    {% set totalSum = 0.00 %}
    <table class="report-data">
        <thead class="border-top-solid-bold border-bottom-solid-bold">
            <tr>
                <th class="text-center">Penjualan #</th>
                <th class="text-center">Tanggal</th>
                <th class="text-center">Customer</th>
                <th class="text-center">Faktur Pajak #</th>
                <th class="text-center">Rangka</th>
                <th class="text-center">Mesin</th>
                <th class="text-center">Harga</th>
            </tr>
        </thead>
        <tbody class="border-top-solid-bold border-bottom-solid-bold">
            {% for saleInvoiceDetail in grid.data %}
                {% set total = saleInvoiceDetail.total %}
                <tr data-field-id="{{ saleInvoiceDetail.id }}">
                    <td class="text-left">{{ saleInvoiceDetail.saleInvoiceHeader.codeNumber|default }}</td>
                    <td class="text-left">{{ saleInvoiceDetail.saleInvoiceHeader.transactionDate|default ? saleInvoiceDetail.saleInvoiceHeader.transactionDate|date('j F Y') }}</td>
                    <td class="text-left">{{ saleInvoiceDetail.saleInvoiceHeader.customer.name|default }}</td>
                    <td class="text-left">{{ saleInvoiceDetail.saleInvoiceHeader.taxNumber|default }}</td>
                    <td class="text-left">{{ saleInvoiceDetail.receiveOrder.purchaseDeliveryOrder.vehicleChassisNumber|default }}</td>
                    <td class="text-left">{{ saleInvoiceDetail.receiveOrder.purchaseDeliveryOrder.vehicleMachineNumber|default }}</td>
                    <td class="text-right">{{ saleInvoiceDetail.total|default|number_format(2) }}</td>
                </tr>
                {% set totalSum = totalSum + total %}
            {% endfor %}
        </tbody>
        <tfoot class="border-top-solid-bold border-bottom-solid-bold">
            <tr>
                <td class="text-right" colspan="6"></td>
                <td class="text-right">{{ totalSum|default|number_format(2) }}</td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="hidden-print">
    <br />
    {{ grid_bottom(grid) }}
</div>

